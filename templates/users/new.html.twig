{{ include('header.html.twig') }} 
        <div class="wrapper">
            <section class="login-content">
                <div class="container">
                    <div class="row align-items-center justify-content-center height-self-center">
                        <div class="col-lg-8">
                            <div class="card auth-card">
                                <div class="card-body p-0">
                                    <div class="d-flex align-items-center auth-content">
                                        <div class="col-lg-7 align-self-center">
                                            <div class="p-3">
                                                <h2 class="mb-2">Nuevo registro</h2>
                                                {{ form_start(form) }}
                                                    <div class="row">
                                                        <div class="col-lg-12">
                                                            <div class="floating-label form-group">
                                                                {{ form_widget(form.username, {'attr': {'class': 'floating-input form-control'}}) }}
                                                                {{ form_label(form.username,'Usuario') }}
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-12">
                                                            <div class="floating-label form-group">
                                                                {{ form_widget(form.password, {
                                                                'attr': {'class': 'floating-input form-control' }}
                                                                ) }}
                                                                {{ form_label(form.password,'Contraseña') }}

                                                                <div style='display:none;'>
                                                                {{ form_widget(form.createdAt) }}
                                                                {{ form_widget(form.active) }}
                                                                </div>
                                                            </div>
                                                        </div>   
                                                    </div>
                                                    <button type="submit" class="btn btn-primary">Crear cuenta</button>
                                                    <p class="mt-3">
                                                        ¿Ya tienes una cuenta? <a href="{{ path('app_index') }}" class="text-primary">Accede a Stockify</a>
                                                    </p>
                                                {{ form_end(form) }}
                                            </div>
                                        </div>
                                        <div class="col-lg-5 content-right">
                                            <img src="{{ asset('assets/images/login/01.png') }}" class="img-fluid image-right" alt="">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

